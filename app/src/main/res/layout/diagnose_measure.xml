    <TextView
        android:id="@+id/measuer_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="유수분 측정 중입니다.\n잠시만 기다려주세요."
        android:textSize="20dp"
        android:lineSpacingExtra = "13dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/loading_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/measuer_state"
        android:background="@drawable/loading"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/go_pic_skin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/measuer_state"
        android:background="@drawable/round_rec"
        android:backgroundTint="@color/colorDarkPink"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="눈 촬영하기   ->"
        android:layout_marginTop="55dp"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:visibility="invisible"/>
</RelativeLayout>