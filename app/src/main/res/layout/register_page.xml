<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Masion Clarifiant"
        android:fontFamily="serif"
        android:textColor="@color/colorDarkGreen"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@color/colorBeige">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rec_circle"
                android:backgroundTint="@color/colorDarkGreen"
                android:gravity="center"
                android:text="아이디와 비밀번호를 입력해주세요"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_circle"
                    android:backgroundTint="@color/colorLightPink"
                    android:text="아이디"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/idText"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/rec_box"
                    android:ems="8"
                    android:hint=" 10-20자 이내 "
                    android:inputType="textPersonName"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"/>

                <Button
                    android:id="@+id/id_check"
                    android:layout_width="70dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/rec_circle"
                    android:backgroundTint="@color/colorGray"
                    android:gravity="center"
                    android:text="중복확인"
                    android:textColor="@android:color/white"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_circle"
                    android:backgroundTint="@color/colorLightPink"
                    android:text="비밀번호"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/passwordText"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/rec_box"
                    android:ems="8"
                    android:hint=" 10-20자 이내 "
                    android:inputType="textPersonName"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_circle"
                    android:backgroundTint="@color/colorLightPink"
                    android:text="비밀번호 확인"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/password2"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/rec_box"
                    android:ems="8"
                    android:hint=" 10-20자 이내 "
                    android:inputType="textPersonName"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rec_circle"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorDarkGreen"
                android:gravity="center"
                android:text="성별과 나이를 선택해주세요"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/button"
                    android:layout_width="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_circle"
                    android:backgroundTint="@color/colorLightPink"
                    android:textColor="@color/colorWhite"
                    android:text="성별" />
                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="여자" />

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="남자" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/button2"
                    android:layout_width="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rec_circle"
                    android:backgroundTint="@color/colorLightPink"
                    android:textColor="@color/colorWhite"
                    android:text="나이" />

                <Spinner
                    android:id="@+id/register_page_spinner_age"
                    android:entries="@array/age_array"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:focusableInTouchMode="true"
                    android:overlapAnchor="false"
                    android:popupBackground="#F3E0E0E0"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/colorBlack"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rec_circle"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/colorDarkGreen"
                android:gravity="center"
                android:text="피부타입을 선택해주세요"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/dryBtn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@android:color/white"
                        android:background="@drawable/round_rec"
                        android:drawableTop="@drawable/ic_stacked_line_chart_black_18dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:text="건성" />
                    <Button
                        android:id="@+id/oilBtn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@android:color/white"
                        android:background="@drawable/round_rec"
                        android:drawableTop="@drawable/ic_blur_on_black_18dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:text="지성" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/complexBtn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@android:color/white"
                        android:background="@drawable/round_rec"
                        android:drawableTop="@drawable/ic_blur_linear_black_18dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:text="복합성" />
                    <Button
                        android:id="@+id/sensitiveBtn"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@android:color/white"
                        android:background="@drawable/round_rec"
                        android:drawableTop="@drawable/ic_gamepad_black_18dp"
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:text="민감성" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rec_circle"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/colorDarkGreen"
                android:gravity="center"
                android:text="집중 케어가 필요한 항목을 선택해주세요"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="수분" />

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="각질" />

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="진정" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="탄력" />

                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="미백" />

                    <CheckBox
                        android:id="@+id/checkBox6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="잡티 " />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/joinbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/colorDarkPink"
                android:text="Maison Clarifiant 시작하기"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
